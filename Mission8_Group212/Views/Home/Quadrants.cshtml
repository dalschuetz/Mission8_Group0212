@{
}

@model List<Task>

<div class="container">
    <div class="row border border-secondary">
        <div class="col-12 border border-secondary"><h2>Stephen Covey's Time Management Matrix</h2></div>
    </div>
    <div class="row">
        <div class="col-1 border border-secondary"></div>
        <div class="col-6 border border-secondary"><h4>Urgent</h4></div>
        <div class="col-5 border border-secondary"><h4>Not Urgent</h4></div>
    </div>
    <div class="row border border-secondary">
        <div class="col-1 border border-secondary" style="transform: rotate(180deg); writing-mode: vertical-lr;"><h4>Important</h4></div>
        <div class="col-6 border border-secondary">
            <h4>Quadrant 1</h4>
            @foreach (var x in Model.Where(m => m.QuadId == 1))
            {
                <span>@x.TaskName @x.DueDate</span>
                <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Update</a>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
            }
        </div>
        <div class="col-5 border border-secondary">
            <h4>Quadrant 2</h4>
            @foreach (var x in Model.Where(m => m.QuadId == 2))
            {
                <span>@x.TaskName @x.DueDate</span>
                <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Update</a>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
            }
        </div>    
    </div>
    <div class="row">
        <div class="col-1 border border-secondary" style="transform: rotate(180deg); writing-mode: vertical-lr;"><h4>Not Important</h4></div>
        <div class="col-6 border border-secondary">
            <h4>Quadrant 3</h4>
            @foreach (var x in Model.Where(m => m.QuadId == 3))
            {
                <span>@x.TaskName @x.DueDate</span>
                <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Update</a>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
            }
        </div>
        <div class="col-5 border border-secondary">
            <h4>Quadrant 4</h4>
            @foreach (var x in Model.Where(m => m.QuadId == 4))
            {
                <span>@x.TaskName @x.DueDate</span>
                <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Update</a>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
            }
        </div>
    </div>
</div>