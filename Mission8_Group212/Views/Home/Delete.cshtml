@{
    ViewData["Title"] = "Confirm Deletion";
}

@model TaskModel

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete, @Model.TaskName?</h3>
<form method="post">
    <input type="hidden" asp-for="TaskId" />

    <a class="btn btn-info" asp-controller="Home" asp-action="Quadrants">Cancel</a>
    <button class="btn btn-danger" type="submit">Delete</button>
</form>